<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>form 전송</title>
    <style>
      a {
        text-decoration: none;
        color: black;
        font-size: 1.5rem;
      }
    </style>
  </head>
  <body>
    <h2>GET 요청</h2>
    <form action="/getForm" method="get">
      <label> id: <input type="text" name="id" /> </label>
      <br />
      <label> email: <input type="email" name="email" /> </label>
      <br />
      <label> pw: <input type="password" name="pw" /> </label>

      <button type="button">제출?</button>
      <button type="submit">제출</button>
    </form>

    <h2>POST 요청</h2>
    <form action="/postForm" method="post">
      <label for="id">ID</label>
      <input
        type="text"
        id="id"
        name="id"
        placeholder="id 작성"
        required
        title="ID는 대소문자, 숫자, 한글로 구성된 네글자 이상의 문자여야 합니다."
        pattern="^([a-zA-Z0-9가-힣]){4,}$" />
      <br />
      <label for="pw">PW</label>
      <input
        type="password"
        id="pw"
        name="pw"
        placeholder="비밀번호 작성"
        required
        title="비밀번호는 영어 소문자, 숫자로 구성된 8~12글자의 문자여야 합니다."
        pattern="^([a-z0-9]){8,12}$" />
      <br />
      <label>
        <input type="checkbox" name="agree" value="marketing" />
        마케팅 동의
      </label>
      <label>
        <input type="checkbox" name="agree" value="private" />
        개인정보 수집 동의
      </label>
      <label>
        <input type="checkbox" name="agree" value="use" />
        이용약관 동의
      </label>

      <br />
      <input type="submit" value="제출" />
    </form>

    <h2>유효성 검사</h2>
    <form
      action="/js-form-check"
      method="post"
      name="validationForm"
      target="_blank"
      onsubmit="return checkForm(this)">
      <input
        type="text"
        name="id2"
        title="최소 한 글자"
        minlength="1"
        placeholder="최소 한 글자를 작성해주세요"
        id="input" />

      <br /><br />
      <span>우편물 수령 장소</span>
      <label> <input type="checkbox" name="mail" value="자택" />자택</label>
      <label> <input type="checkbox" name="mail" value="회사" />회사</label>
      <button>제출</button>
    </form>

    <hr />
    <h2>실습</h2>
    <div style="display: flex; flex-direction: column">
      <a href="./practice1">get으로 정보 받기</a>
      <a href="./practice2">post으로 정보 받기</a>
    </div>
    <script>
      function checkForm(form) {
        // this - 나 자신을 의미, form 태그 그 자체
        // const form2 = document.forms["validationForm"];
        console.log(form);
        console.log(form.id2); // 선택된 form.name
        console.log(form.input); // 선택된 form.id

        if (form.id2.value.trim() === "") {
          alert("아이디를 입력하세요");
          // false를 return하여 submit 이벤트 막기
          return false;
        }

        console.log(form.mail); // 배열 형태

        // 체크박스 하나 이상 선택해야 제출되도록 (checkbox상태가 둘 다 false라면 return false)
        if (!form.mail[0].checked && !form.mail[1].checked) {
          alert("우편물 수령 장소를 선택하세요.");
          return false;
        }
      }
    </script>
  </body>
</html>
